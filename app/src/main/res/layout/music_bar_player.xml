<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/home_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/relativeLayout">
        <ImageView
            android:id="@+id/bar_album"
            android:src="@drawable/no_album"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/bar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bar_album"
            android:textSize="28sp"
            android:text="歌名" />

        <TextView
            android:id="@+id/bar_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bar_album"
            android:layout_below="@+id/bar_title"
            android:textSize="18sp"
            android:text="歌手" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp">

        <RelativeLayout
            android:id="@+id/homebar_background"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"

            android:background="@drawable/shadowed_circle_red"
            android:clickable="false">

            <ImageButton
                android:id="@+id/home_pauseButton"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:scaleType="centerInside"
                android:src="@drawable/play_light"
                android:visibility="visible" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/home_nextButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:alpha="0.9"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/skip_next"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/homebar_background" />
    </RelativeLayout>
</RelativeLayout>