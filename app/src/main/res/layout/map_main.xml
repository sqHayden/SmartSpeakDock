<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ptp_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toplayoutstyle"
        android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/ptp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <TextView
                android:layout_marginStart="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点选择："
                android:textColor="#FFFFFF"
                />

            <EditText
                android:id="@+id/route_start"
                android:theme="@style/MyEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:singleLine="true"
                android:text="我的位置"
                android:textColor="#FFFFFF"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionSearch"
                />
            <Button
                android:id="@+id/route_start_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定位"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/map_narrow" />

            <EditText
                android:id="@+id/route_end"
                android:theme="@style/MyEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="输入终点"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:imeOptions="actionSearch"
                android:singleLine="true" />
            <Button
                android:id="@+id/route_end_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定位" />
        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="61dp"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_below="@id/ptp_layout"
            >
            <Button
                android:id="@+id/mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="9dip"
                android:onClick="searchButtonProcess"
                android:text="跨城交通"
                android:textColor="#FFFFFF"
                android:background="@drawable/map_button_notcheck"
                />
            <Button
                android:id="@+id/drive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="9dip"
                android:onClick="searchButtonProcess"
                android:text="驾车"
                android:textColor="#FFFFFF"
                android:background="@drawable/map_button_notcheck"
                />

            <Button
                android:id="@+id/transit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="9dip"
                android:onClick="searchButtonProcess"
                android:text="公交"
                android:textColor="#FFFFFF"
                android:background="@drawable/map_button_notcheck"
                />

            <Button
                android:id="@+id/walk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="9dip"
                android:onClick="searchButtonProcess"
                android:text="步行"
                android:textColor="#FFFFFF"
                android:background="@drawable/map_button_notcheck"
                />
            <Button
                android:id="@+id/bike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="9dip"
                android:onClick="searchButtonProcess"
                android:text="骑行"
                android:textColor="#FFFFFF"
                android:background="@drawable/map_button_notcheck"
                />
            <Button
                android:id="@+id/make_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:onClick="searchButtonProcess"
                android:text="生成路线"
                android:textColor="#FFFFFF"
                android:background="@drawable/map_button_routemake"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
            android:id="@+id/search_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toplayoutstyle"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dip"
                android:text="关键字查询："
                android:textColor="#FFFFFF"
                />
            <EditText
                android:id="@+id/edit_key"
                android:theme="@style/MyEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="例：车站、酒店等"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:imeOptions="actionSearch"
                android:singleLine="true" />
            <Button
                android:id="@+id/nearby_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="搜索附近" />

            <Button
                android:id="@+id/city_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="全市搜索" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="40dp">

        <ImageView
            android:id="@+id/my_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/map_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_location"
            android:text="我的位置"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:id="@+id/fab_parent"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0480ce"
                android:textSize="25sp"
                android:text="路径"
                android:layout_gravity="center"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:src="@android:drawable/ic_menu_search"
                app:backgroundTint="#0480ce"
                app:fabSize="normal"
                app:rippleColor="#FF3F91C4"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0480ce"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:text="选择"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/map_go"
        android:background="#af4578"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/spend_time"
            android:layout_marginStart="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="总耗时：17分钟"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/distance_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="总距离：4.4公里"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/traffic_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="红绿灯7个"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/choose_route"
            android:text="开始导航"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="3dp"
            android:background="@drawable/map_go"
            android:layout_weight="0.25"
            />
    </LinearLayout>
</RelativeLayout>