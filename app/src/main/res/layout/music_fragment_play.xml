<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/play_fragment"
    android:background="@color/Splash_background"
    tools:context="com.idx.smartspeakdock.music.activity.MusicPlayActivity">

    <ImageView
        android:src="@drawable/back"
        android:id="@+id/back"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:contentDescription="null"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SeekBar
            android:id="@+id/seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            app:layout_constraintBottom_toTopOf="@+id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="30dp"
            android:text="00:00"
            app:layout_constraintRight_toLeftOf="@+id/seek"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/seek"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/seek"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="8dp"
            android:text="00:00"
            app:layout_constraintTop_toTopOf="@+id/seek"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/seek"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="@+id/seek"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="260dp"
            android:layout_height="31dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/artist"
            android:layout_width="230dp"
            android:layout_height="29dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="未知"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="333dp"
            android:layout_height="76dp"
            android:layout_below="@+id/album"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"

            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">


            <ImageButton
                android:id="@+id/iv_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:src="@mipmap/music_previous" />


            <ImageButton
                android:id="@+id/iv_start"
                android:layout_marginTop="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:scaleType="centerInside"
                android:src="@mipmap/music_pause"
                android:visibility="visible" />


            <ImageButton
                android:id="@+id/iv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:src="@mipmap/music_next" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/album"
            android:layout_width="@dimen/music_album_outboard_height"
            android:layout_height="5dp"
            android:layout_marginTop="@dimen/music_album_outboard_marginTop"
            android:src="@mipmap/music_frame_shadow_music"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/artist" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
