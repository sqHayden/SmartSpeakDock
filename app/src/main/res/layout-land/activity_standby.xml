<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/line6"
    android:gravity="center"
    android:background="@drawable/bg_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.idx.smartspeakdock.standby.TimeView
            android:id="@+id/time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="260px"
            android:typeface="sans"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/linter_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/time_textView">
            <TextView
                android:id="@+id/location_textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="深圳市"
                android:textSize="60px" />
            <TextView
                android:id="@+id/data_textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="SUNDAY,FEB 5"
                android:textSize="60px"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linter_2"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linter_1">
            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/weather_cloudy" />
            <TextView
                android:id="@+id/standby_weather_tmp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:textSize="48px"
                android:text="17°C/19°C"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linter_3"
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linter_2">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/weather_life_car_wash" />
            <TextView
                android:id="@+id/standby_life_car"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:textSize="48px"
                android:text="洗车：较适宜"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linter_4"
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linter_3">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/weather_life_clothes" />
            <TextView
                android:id="@+id/standby_life_clothes"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:textSize="48px"
                android:text="穿衣：较冷"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

